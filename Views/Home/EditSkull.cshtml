                <label asp-for="OsteologySkull.SkullTrauma">SkullTrauma</label>
                <input asp-for="OsteologySkull.SkullTrauma" value="@Model.OsteologySkull.SkullTrauma" /><br />

                <button type="submit">Update Skull Osteology Report</button><br /> <br />
            }
        }
        else
        {
            @*this is the first time it is being created last modified and created are the same person*@
            <input asp-for="OsteologySkull.LastModifiedBy" hidden value="@User.Identity.Name" />
