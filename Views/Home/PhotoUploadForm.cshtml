@model Photo

<h1>Upload a Photo</h1>

<form method="post" enctype="multipart/form-data" asp-action="PhotoSave">
    <div>
        <label asp-for="uploadphoto">Photo Upload Here</label>
        <input type="file" asp-for="uploadphoto" />
    </div>
    <div>
        <label asp-for="PhotoID">PhotoID</label>
        <input type="text" asp-for="PhotoID" />
    </div>
    <br />
    <div>
        <label asp-for="BurialSiteID">Burial Site ID</label>
        <input type="text" asp-for="BurialSiteID" />
    </div>

    <button class="btn-danger" type="submit">upload</button>

    @*<input asp-page-handler="Upload" class="btn-danger" type="submit" value="Upload" />*@
