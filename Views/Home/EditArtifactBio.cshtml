@model ArtifactViewModel

<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>BYU Fag el-Gamous Excavation Site</h1>
                    <span class="subheading">Intex Application</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <form asp-action="EditArtifactBio" method="post">
        @if (Model != null)
        {
            <input asp-for="ArtifactBioNote.LastModifiedBy" hidden value="@User.Identity.Name" />

            <h3>Artifact Bio Note</h3>

            @if (Model.Identifier != null)
            {
                <input asp-for="Identifier" hidden value="@Model.Identifier" />
                <input asp-for="ArtifactBioNote.CreatedBy" hidden value="@Model.ArtifactBioNote.CreatedBy" />

                <label asp-for="ArtifactBioNote.Rack">Rack</label>
                <input asp-for="ArtifactBioNote.Rack" value="@Model.ArtifactBioNote.Rack" /><br />

                <label asp-for="ArtifactBioNote.ArtifactFound">Artifact Found</label>
                <input asp-for="ArtifactBioNote.ArtifactFound" value="@Model.ArtifactBioNote.ArtifactFound" /><br />

                <label asp-for="ArtifactBioNote.ArtifactDescription">Artifact Description</label>
                <input asp-for="ArtifactBioNote.ArtifactDescription" value="@Model.ArtifactBioNote.ArtifactDescription" /><br />

                <label asp-for="ArtifactBioNote.SampleTaken">Sample Taken</label>
                <input asp-for="ArtifactBioNote.SampleTaken" value="@Model.ArtifactBioNote.SampleTaken" /><br />

                <label asp-for="ArtifactBioNote.BioNotes">Bio Notes</label>
                <textarea asp-for="ArtifactBioNote.BioNotes" value="@Model.ArtifactBioNote.BioNotes" /><br />

                <label asp-for="ArtifactBioNote.AdditionalNotes">Additional Notes</label>
                <textarea asp-for="ArtifactBioNote.AdditionalNotes" value="@Model.ArtifactBioNote.AdditionalNotes" /><br />

                <label asp-for="ArtifactBioNote.FaceBundle">Face Bundle</label>
                <input asp-for="ArtifactBioNote.FaceBundle" value="@Model.ArtifactBioNote.FaceBundle" /><br />

                <label asp-for="ArtifactBioNote.PathologyAnomalies">Pathology Anomalies</label>
                <input asp-for="ArtifactBioNote.PathologyAnomalies" value="@Model.ArtifactBioNote.PathologyAnomalies" /><br />

                <label asp-for="ArtifactBioNote.BurialWraping">Burial Wrapping</label>
                <input asp-for="ArtifactBioNote.BurialWraping" value="@Model.ArtifactBioNote.BurialWraping" /><br />

                <label asp-for="ArtifactBioNote.PreservationIndex">Preservation Index</label>
                <input asp-for="ArtifactBioNote.PreservationIndex" value="@Model.ArtifactBioNote.PreservationIndex" /><br />

                <button type="submit">Update Artifact Bio Report</button><br /> <br />
            }
        }
        else
        {
            @*this is the first time it is being created last modified and created are the same person*@
            <input asp-for="ArtifactBioNote.LastModifiedBy" hidden value="@User.Identity.Name" />
            @*keep the created information the same*@
            <input asp-for="ArtifactBioNote.CreatedBy" hidden value="@User.Identity.Name" />

            <input asp-for="Identifier" hidden value="@Model.Identifier" />
            <input asp-for="ArtifactBioNote.CreatedBy" hidden value="@Model.ArtifactBioNote.CreatedBy" />

            <label asp-for="ArtifactBioNote.Rack">Rack</label>
            <input asp-for="ArtifactBioNote.Rack" value="@Model.ArtifactBioNote.Rack" /><br />

            <label asp-for="ArtifactBioNote.ArtifactFound">Artifact Found</label>
            <input asp-for="ArtifactBioNote.ArtifactFound" value="@Model.ArtifactBioNote.ArtifactFound" /><br />

            <label asp-for="ArtifactBioNote.ArtifactDescription">Artifact Description</label>
            <input asp-for="ArtifactBioNote.ArtifactDescription" value="@Model.ArtifactBioNote.ArtifactDescription" /><br />

            <label asp-for="ArtifactBioNote.SampleTaken">Sample Taken</label>
            <input asp-for="ArtifactBioNote.SampleTaken" value="@Model.ArtifactBioNote.SampleTaken" /><br />

            <label asp-for="ArtifactBioNote.BioNotes">Bio Notes</label>
            <input asp-for="ArtifactBioNote.BioNotes" value="@Model.ArtifactBioNote.BioNotes" /><br />

            <label asp-for="ArtifactBioNote.AdditionalNotes">Additional Notes</label>
            <input asp-for="ArtifactBioNote.AdditionalNotes" value="@Model.ArtifactBioNote.AdditionalNotes" /><br />

            <label asp-for="ArtifactBioNote.FaceBundle">Face Bundle</label>
            <input asp-for="ArtifactBioNote.FaceBundle" value="@Model.ArtifactBioNote.FaceBundle" /><br />

            <label asp-for="ArtifactBioNote.PathologyAnomalies">Pathology Anomalies</label>
            <input asp-for="ArtifactBioNote.PathologyAnomalies" value="@Model.ArtifactBioNote.PathologyAnomalies" /><br />

            <label asp-for="ArtifactBioNote.BurialWraping">Burial Wrapping</label>
            <input asp-for="ArtifactBioNote.BurialWraping" value="@Model.ArtifactBioNote.BurialWraping" /><br />

            <label asp-for="ArtifactBioNote.PreservationIndex">Preservation Index</label>
            <input asp-for="ArtifactBioNote.PreservationIndex" value="@Model.ArtifactBioNote.PreservationIndex" /><br />

            <button type="submit">Add Artifact Bio Report</button><br /> <br />
        }
        <div asp-validation-summary="All"></div>
    </form>
</div>